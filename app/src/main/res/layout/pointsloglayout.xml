<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="15dp"

    android:id="@+id/gamelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/border">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_game"
        android:layout_centerVertical="true"
        android:layout_width="70dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/b"
        android:layout_height="70dp"/>

    <TextView
        android:id="@+id/txt_gamename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@id/imageView_game"
        android:layout_toRightOf="@id/imageView_game"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:text="game name"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txt_points_earned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"

        android:layout_below="@id/txt_gamename"
        android:textSize="16sp"
        android:background="@drawable/round"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txt_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_points_earned"
        android:layout_toEndOf="@id/imageView_game"
        android:layout_marginStart="31dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:text="Date And Time:"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>